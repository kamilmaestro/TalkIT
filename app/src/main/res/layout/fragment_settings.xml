<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/settings_background">

    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@android:drawable/ic_menu_delete"
            android:id="@+id/deleteFloating"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/optionsConstText"
            android:layout_marginStart="48dp"/>
    <TextView
            android:text="Instruction for hidden options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/optionsConstText"
            android:textSize="24sp" android:textColor="@android:color/background_light"
            android:textStyle="bold"
            android:layout_marginTop="124dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@android:drawable/ic_menu_edit"
            android:id="@+id/editFloating"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/optionsConstText"
            android:layout_marginEnd="48dp"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@android:drawable/ic_menu_rotate"
            android:id="@+id/refreshFloating"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/optionsConstText"
            app:layout_constraintStart_toEndOf="@+id/deleteFloating"
            app:layout_constraintEnd_toStartOf="@+id/editFloating"/>
</android.support.constraint.ConstraintLayout>